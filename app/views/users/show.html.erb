<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<h2>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>タイトル</th>
			<th>コンテンツ</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<th>名前</th>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>年齢</th>
			<td><%= @user.age %></td>
		</tr>
		<tr>
			<th>地域</th>
			<td><%= @user.area %></td>
		</tr>
		<tr>
			<th>コメント</th>
			<td><%= @user.comment %></td>
		</tr>
	</tbody>
</table>
</h2>
